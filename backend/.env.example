# ECOA News Monitoring Portal - Environment Variables

# App Settings
DEBUG=True
APP_NAME="ECOA - Monitor de Not√≠cias"

# MySQL Database (Railway)
# Option 1: Use individual settings
MYSQL_HOST=your-railway-mysql-host.railway.app
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=your-password
MYSQL_DATABASE=railway

# Option 2: Use DATABASE_URL (Railway provides this)
# DATABASE_URL=mysql://user:password@host:port/database

# JWT Authentication
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Plan Limits
FREE_PLAN_TERM_LIMIT=3
PRO_PLAN_TERM_LIMIT=100

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Twitter API (optional, for Twitter scraping)
TWITTER_API_KEY=
TWITTER_API_SECRET=
TWITTER_ACCESS_TOKEN=
TWITTER_ACCESS_TOKEN_SECRET=
TWITTER_BEARER_TOKEN=

# Threads API (optional)
THREADS_ACCESS_TOKEN=

# Redis (for Celery task queue)
REDIS_URL=redis://localhost:6379/0
